{% extends 'Sf2filmsFilmsBundle:Default:index.html.twig' %}

{% block content_main %}
    <div class="postFormBox">
        {{ form_start(form.txt) }}
        {{ form_errors(form.txt) }}
        <div class="postFormFields">
            <div class="input-group">
                {{ form_label(form.txt, 'Текст') }}
                {{ form_errors(form.txt) }}
                {{ form_widget(form.txt, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="postFormButtons">
            <button id="addComment" type="submit" class="btn btn-primary"/>Сохранить</button>
        </div>
        {{ form_end(form.txt) }}
    </div>
{% endblock %}
