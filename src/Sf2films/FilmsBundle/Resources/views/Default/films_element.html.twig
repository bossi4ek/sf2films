{% extends 'Sf2filmsFilmsBundle:Default:index.html.twig' %}

{% block content_main %}
    <div id="allPost" class="postBox">
        <div class="panel panel-default" id_content="{{ data.id }}">
            <div class="panel-body post_body">
                <div style="float: left; font-size: 18px;">
                    {{ data.name }}
                </div>
                <div style="float: right;">
                    <a href="{{ path('sf2films_films_del', {'id': data.id}) }}">
                        <span class="glyphicon glyphicon-remove post_delete"></span>
                    </a>
                </div>
            </div>
            <div style="padding: 5px;">
                <span style="font-weight: bold;">Жанр:</span>
                {% for genre in data.genres %}
                    <a href="{{ path('sf2films_films_by_genre', {'translit': genre.nameTranslit}) }}">{{ genre.name }}</a>{% if loop.index !=  data.genres|length %}, {% endif %}
                {% endfor %}
            </div>
            <div style="padding: 5px;">
                <span style="font-weight: bold;">Актеры:</span>
                {% for person in data.persons %}
                    <a href="{{ path('sf2films_films_by_person', {'translit': person.nameTranslit}) }}">{{ person.name }}</a>{% if loop.index !=  data.persons|length %}, {% endif %}
                {% endfor %}
            </div>
            <div style="padding: 5px;">
                <span style="font-weight: bold;">Анотация:</span><br/>
                {{ data.description }}
            </div>
        </div>
    </div>

    <div>
        <a href="{{ path('sf2films_films_all') }}">К фильмам</a>
    </div>
{% endblock %}
